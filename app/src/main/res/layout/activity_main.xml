<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:layout_alignBottom="@+id/progress"
            android:text="progress bar demo: "/>

    <com.emucoo.emucooprogressbar.EmucooProgressView
            android:id="@+id/progress"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/tv"
            android:layout_toLeftOf="@+id/bt"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            app:emu_pv_start_color="#2addb5"
            app:emu_pv_end_color="#1ebaed"
            app:emu_pv_max="100"
            app:emu_pv_progress="30"
            app:emu_pv_need_tag="true"
            app:emu_pv_need_text="true"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_alignBottom="@+id/progress"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:text="go"/>

</RelativeLayout>